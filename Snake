

/**
 * the class that handles the calculation for the each of the individual snake units
 * @author cleme
 *
 */
public class Snake {
	int x; // the x position of the snake pixel-wise
	int y; // the y position of the snake pixel-wise
	Snake fSnake;// snake unit in front of it
	String direction; //direction that its facing

	public Snake(int arg0, int arg1, Snake arg2) {
		x = arg0;
		y = arg1;
		fSnake = arg2;
		direction = fSnake.direction;
	}
	
}
