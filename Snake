

/**
 * the class that handles the calculation for the each of the individual snake units
 * @author cleme
 *
 */
public class Snake {
	private int x; // the x position of the snake pixel-wise
	private int y; // the y position of the snake pixel-wise
	Snake fSnake;
	String direction; // snake that is in front of it

	public Snake(int arg0, int arg1, Snake arg2) {
		x = arg0;
		y = arg1;
		fSnake = arg2;
		direction = fSnake.direction;
	}
	
	public void sety(int content) {
		y = content;
	}
	public void setx(int content) {
		x = content;
	}
	
	public void setdirection(String content) {
		direction= content;
	}
	
	public int gety() {
		return y;
	}
	
	public int getx() {
		return x;
	}
	
	public String getdirection() {
		return direction;
	}
	
}
