import java.util.Timer; 
import java.util.TimerTask; 

/**
 * Class that handles timers and instructions per tick
 * @author cleme
 *
 */
public class Clock{
        int secondsPassed;
       Timer tick;
       TimerTask task; //instructions that are to be done
       
       /**
        * Clock Class constructor
        * @param args Timer task that is to be defined elsewhere
        */
       public Clock(TimerTask args) {
    	   tick= new Timer();
    	   task = args;
    	   
       }
       
       public void settask(TimerTask content) {
    	   task = content;
       }

       /**
        * runs the task every x nanoseconds,
        * @param x nanosecond interval for running task
        */
       public void run(int x){
           tick.scheduleAtFixedRate(task,0,x);
           secondsPassed++;
       }

}
